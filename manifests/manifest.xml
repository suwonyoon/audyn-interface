<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

  <!-- Basic add-in information -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Audyn</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Audyn" />
  <Description DefaultValue="AI-powered presentation analysis for PowerPoint" />
  <IconUrl DefaultValue="https://localhost:3001/office/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://localhost:3001/office/assets/icon-80.png" />
  <SupportUrl DefaultValue="https://github.com/audyn/audyn" />

  <!-- Supported hosts -->
  <Hosts>
    <Host Name="Presentation" />
  </Hosts>

  <!-- Default settings -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://localhost:3001/taskpane.html" />
  </DefaultSettings>

  <!-- Required permissions -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Version overrides for ribbon integration -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Presentation">
        <DesktopFormFactor>
          <!-- Function file for commands (optional) -->
          <FunctionFile resid="Taskpane.Url" />

          <!-- Ribbon extension points -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="Audyn.Group">
                <Label resid="Group.Label" />
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16" />
                  <bt:Image size="32" resid="Icon.32x32" />
                  <bt:Image size="80" resid="Icon.80x80" />
                </Icon>

                <!-- Show task pane button -->
                <Control xsi:type="Button" id="Audyn.ShowTaskpane">
                  <Label resid="Taskpane.Label" />
                  <Supertip>
                    <Title resid="Taskpane.Title" />
                    <Description resid="Taskpane.Description" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>Audyn.TaskpaneId</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://localhost:3001/office/assets/icon-16.png" />
        <bt:Image id="Icon.32x32" DefaultValue="https://localhost:3001/office/assets/icon-32.png" />
        <bt:Image id="Icon.80x80" DefaultValue="https://localhost:3001/office/assets/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3001/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="Audyn" />
        <bt:String id="Taskpane.Label" DefaultValue="Analyze Presentation" />
        <bt:String id="Taskpane.Title" DefaultValue="Audyn Analysis" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="Taskpane.Description" DefaultValue="Open the Audyn task pane to analyze your presentation with AI-powered insights." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
